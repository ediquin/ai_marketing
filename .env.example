# ===========================================
# AI MARKETING STRATEGIST - CONFIGURATION
# ===========================================

# PRIMARY PROVIDERS (FREE - RECOMMENDED)
# =====================================

# Google AI (Gemini) - FREE - Get from: https://ai.google.dev
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-1.5-flash

# Groq - FREE & SUPER FAST - Get from: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# BACKUP PROVIDERS (OPTIONAL)
# ===========================

# OpenAI (Paid but high quality)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic (Paid)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# LOCAL MODELS CONFIGURATION (+10 BONUS POINTS)
# =============================================
OLLAMA_BASE_URL=http://localhost:11434
LOCAL_MODEL_FAST=llama3.1:8b
LOCAL_MODEL_BALANCED=llama3.1:8b
LOCAL_MODEL_CREATIVE=qwen2.5:14b

# MODEL ROUTING STRATEGY
# =====================
MODEL_PREFERENCE=mixed  # Options: mixed, local, cloud
PREFER_LOCAL=true
FALLBACK_TO_CLOUD=true

# AGENT-SPECIFIC MODEL ASSIGNMENT
# ===============================
PROMPT_ANALYZER_MODEL=gemini
POST_CLASSIFIER_MODEL=local_fast
BRAND_VOICE_MODEL=gemini
FACT_GROUNDING_MODEL=groq
TEXT_GENERATOR_MODEL=gemini
CAPTION_CREATOR_MODEL=groq
VISUAL_CONCEPT_MODEL=gemini
REASONING_MODULE_MODEL=gemini

# SYSTEM CONFIGURATION
# ====================
MAX_RETRIES=3
TIMEOUT_SECONDS=30
MAX_TOKENS=2000
TEMPERATURE=0.7
TARGET_PROCESSING_TIME=10.0

# CACHING & PERFORMANCE
# ====================
ENABLE_CACHING=true
CACHE_DURATION_HOURS=24
ENABLE_PARALLEL_PROCESSING=true

# LOGGING & DEBUGGING
# ==================
LOG_LEVEL=INFO
LOG_FILE=marketing_system.log
DEBUG_MODE=false
ENABLE_DETAILED_LOGS=true

# OBSERVABILITY (BONUS POINTS)
# ============================
ENABLE_METRICS=true
ENABLE_TRACING=true
METRICS_PORT=8080

# OUTPUT CONFIGURATION
# ===================
OUTPUT_FORMAT=json
INCLUDE_REASONING=true
INCLUDE_METADATA=true
ENABLE_VALIDATION=true